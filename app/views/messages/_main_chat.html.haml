.main-chat
  .main-chat__group-info
    .main-chat__group-info__box
      = @group.name
      .main-chat__group-info__box__member
        Member:
        .main-chat__group-info__box__member__list
          %ul.main-chat__group-info__box__member__list__member-list
            %li.member-first
              - @group.users.each do |user|
                = user.name
    .main-chat__group-info__edit-btn
      = link_to edit_group_path(@group), class: "edit" do
        Edit

  .main-chat__message-lists
    = render @messages

  .main-chat__message-form
    .main-chat__message-form__box
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'input-text', placeholder: 'type a message'
        .main-chat__message-form__box__image
          = f.label :image, class: 'input-box__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'send-btn'





