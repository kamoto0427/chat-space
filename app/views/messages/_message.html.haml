.message{data: {message: {id: message.id}}}
  .main-chat__message-lists__box
    .main-chat__message-lists__box__name-date
      .main-chat__message-lists__box__name-date__name
        = message.user.name
      .main-chat__message-lists__box__name-date__date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .main-chat__message-lists__box__text
      - if message.content.present?
        %p.main-chat__message-lists__box__text__content
          = message.content
      = image_tag message.image.url, class: 'message__image' if message.image.present?