.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      %h3.side-bar__user-name__box__name
        = current_user.name
      .side-bar__user-name__box__btn
        = link_to new_group_path, class: "side-bar__user-name__box__btn side-bar__user-name__box__btn--edit" do
          = icon('far', 'edit', class: "side-bar__user-name__box__btn--icon")
        = link_to edit_user_path(current_user), class: "side-bar__user-name__box__btn side-bar__user-name__box__btn--cog" do
          = icon('fas', 'cog', class: "side-bar__user-name__box__btn--icon")

  .side-bar__group-list
    .side-bar__group-list__box1
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .side-bar__group-list__box1__group-name
            = group.name
          .side-bar__group-list__box1__text
            = group.show_last_message
            
